<section class="cart_area padding_top">
  <div class="container">
    <div class="cart_inner">
      <div class="table-responsive">
        {{!-- {{#if cartErr}}
        <p class="text-danger">cartErr</p>
        {{/if}} --}}
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Product</th>
              <th scope="col">Price</th>
              <th scope="col" class="text-center">Add</th>
              
              <th scope="col" class="text-center">Remove</th>
            </tr>
          </thead>
          <tbody>
            {{#each products}}
            <tr>
              <td>
                <div class="media">
                  <div class="d-flex">
                    <img src="/product-images/{{product.image.[0]}}" alt="" width="140" height="auto" />
                  </div>
                  <div class="media-body">
                    <p>{{this.product.product.product_name}}</p>
                  </div>

                </div>
              </td>
              <td>
                <h5>{{this.product.product.price}}</h5>
              </td>
              <td>
                <button onclick="addToCart('{{productDetails._id}}')" class="btn_3">add to cart</button>
              </td>
              
              {{!-- <td>
                <h5>{{totalValue}}</h5>
              </td> --}}
              <td class=" text-center ">
                <button class="btn_3 d-flex " onclick="removeWishlistProduct('{{this._id}}','{{this.product._id}}')"><i class="text-light mr-2   fas fa-times text-danger fw-bold" ></i>Remove</button>
              </td>
            </tr>
            {{/each}}
          
            <tr class="bottom_button">
              <td>
                {{!-- <a class="btn_1" href="">Coupon</a> --}}
              </td>
              <td></td>
              <td></td>
              <td>
                <div class="cupon_text float-right">
                  <a class="btn_1" href="/userProduct">Add Products</a>
                </div>
              </td>
            </tr>
           
          </tbody>
        </table>
        
      </div>
    </div>
</section>
<style>
  .removeButton {
    cursor: pointer;
  }

  .removeButton:hover {
    transform: scale(1.3)
  }
</style>