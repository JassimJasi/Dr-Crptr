<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.js"></script>
<style>
    .error {
  color: red;
  border: 1px solid  red;
}
</style>

<script>
    $("#userSignup").validate({
        rules: {
            displayName: {
                required: true,
                minlength: 5
            },

            Email: {
                required: true,
                Email: true
            },

            Phone: {
                required: true,
                minlength: 10
            },

            Password: {
                required: true,
                minlength: 5,
                maxlength: 15

            },

            ConfirmPassword: {
                required: true,
                equalTo: '#Password',
                minlength: 5,
                maxlength: 15
            }


        },
        messages: {
            Password: {
                required: "the password is required"

            },
            ConfirmPassword: {
                equalTo: "enter the same password"

            },
        }
    })
</script>

