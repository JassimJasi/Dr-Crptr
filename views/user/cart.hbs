<section class="cart_area padding_top">
  <div class="container">
    <div class="cart_inner">
      <div class="table-responsive">

        {{#if errMes}}
        <p Swal.fire(errMes)></p>
        {{/if}}
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Product</th>
              <th scope="col">Price</th>
              <th scope="col">Quantity</th>

              <th scope="col" class="text-center">Remove</th>
            </tr>
          </thead>
          <tbody>
            {{#each products}}
            <tr>
              <td>
                <div class="media">
                  <div class="d-flex">
                    <img src="/product-images/{{product.image.[0]}}" alt="" width="140" height="auto" />
                  </div>
                  <div class="media-body">
                    <p>{{this.product.product.product_name}}</p>
                  </div>

                </div>
              </td>
              <td>
                <h5>{{this.product.product.price}}</h5>
              </td>
              <td>
                {{!-- <div class="product_count">
                  <span class="input-number-decrement"
                    onclick="changeQuantity('{{this._id}}','{{this.product._id}}',-1)"> <i
                      class="ti-angle-down"></i></span>
                  <input class="" type="text" value="{{this.quantity}}" min="0" max="10">
                  <span class="input-number-increment"
                    onclick="changeQuantity('{{this._id}}','{{this.product._id}}',1)"> <i
                      class="ti-angle-up"></i></span>
                </div> --}}
                <button class="cart-items-count me-3"
                  onclick="changeQuantity('{{this._id}}','{{this.product._id}}','{{../user._id}}',-1)">-</button>
                <span id="{{this.product._id}}">{{this.quantity}}</span>
                <button class="cart-items-count ms-3"
                  onclick="changeQuantity('{{this._id}}','{{this.product._id}}','{{../user._id}}',1)">+</button>
              </td>
              {{!-- <td>
                <h5>{{totalValue}}</h5>
              </td> --}}
              <td class=" text-center">
                <p onclick="removeCartProduct('{{this._id}}','{{this.product._id}}')"><i
                    class="removeButton fas fa-times text-danger fw-bold"></i></p>
              </td>
            </tr>
            {{/each}}


            <tr class="bottom_button">
              <td class="">
                <a class="btn_1" href="/userProduct">Add Products</a>
              </td>
              <td></td>
              <td></td>
              <hr>

              <td class="">
                <div class="coupon cupon_text float-right">
                  <form action="" id="couponForm">
                    <input class=" mx-3 border-0 px-3 rounded-pill w-50 text-dark " type="text" value="" id="coupon"
                      placeholder="Coupon Code" name="couponCode">
                    <button class="btn_1 border-0" type="submit">Coupon</button>
                  </form>
                </div>
              </td>
            </tr>
            <tr>
              <td></td>
              <td></td>
              <td>
                <h5 class="fw-bold">Subtotal</h5>
              </td>
              <td class="d-flex">
                <h5>Rs <p >{{totalValue}}</p>
                </h5>
              </td>
            </tr>

            <tr>
              <td></td>
              <td></td>
              <td class="fw-bold">Discount</td>
              <td>
                <p  id="discount">00</p>
              </td>
            </tr>

            
            <tr class="shipping_area">
              <td></td>
              <td></td>
              <td class="fw-bold"><h4>Total</h4></td>
              <td>
                <h4 class="fw-bold" id="total">{{totalValue}}</h4>
              </td>
            </tr>
           
          </tbody>
        </table>
        <div class="checkout_btn_inner float-right">
          <a class="btn_1" href="/">Continue Shopping</a>
          <a class="btn_1 checkout_btn_1" href="/checkout">Proceed to checkout</a>
        </div>
      </div>
    </div>
</section>
