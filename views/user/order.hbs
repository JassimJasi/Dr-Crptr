<div class="container-xxl position-relative bg-white d-flex p-0 products" ng-app="app" ng-controller="AppCtrl">

    <div class="content p-4">
        <div class="actionpane  text-center">
            <h2 class=" fw-bold fw-larger">View User</h2>
        </div>

        <div class="tables p-3 ">
            <table class="table  table-striped table-bordered border table-hover table-checkable order-column dataTable mt-3"
                id="userTable">
                <thead class="">
                    <tr>
                        <th>ID</th>
                        <th>Mobile</th>
                        <th>Pincode</th>
                        <th>Amount</th>
                        <th>Payment</th>
                        <th>Date</th>
                        <th>Status</th>
                        <th>View Product</th> {{!-- <th>Status</th> --}}
                    </tr>
                </thead>
                <tbody>

                    {{#each orders}}
                    <tr>
                        <td>{{this._id}}</td>
                        <td><span class="name">{{this.deliverDetails.mobile}}</span>
                        </td>
                        <td>{{this.deliverDetails.pincode}}</td>
                        <td>{{this.totalAmount}}</td>
                        <td>{{this.paymentMethod}}</td>
                        <td>{{this.date}}</td>
                        <td>{{this.status}}</td>
                        <td class="text-center">
                            <a href="/view-order-products/{{this._id}}" class="btn btn-primary">View Products</a>
                        </td>
                        {{!-- <td>{{status}}</td> --}}
                        {{!-- <td><span class="label label-success"> Available </span></td> --}}
                        {{!-- <td>{{this.date}}</td> --}}
                    </tr>
                    {{/each}}
                    {{!--
                    <!-- Modal HTML -->--}}
                    




                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .products {
        .name {
            border-bottom: 1px dotted #ccc;
            cursor: pointer;
        }
    }
</style>
<script>


   

    $(document).ready(function () {
        $('#userTable').DataTable();
    });
</script>