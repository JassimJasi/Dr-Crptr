
    <div class="container-xxl position-relative bg-white d-flex p-0 products" ng-app="app" ng-controller="AppCtrl">

        <div class="content p-4 d-flex justify-content-center">
            <div class="container mt-4">
                <div class="row">
                    <div class="col-md-6">
                        <h2 class="text-center">Edit Product</h2>
                        <form action="/admin/edit-user/{{user._id}}" method="post">
                            <label for="">Name</label>
                            <input type="text" name="displayName" class="form-control" value="{{user.displayName}}">

                            <label for="">Email</label>
                            <input type="email" name="Email" class="form-control" value="{{user.Email}}">

                            <label for="">Phone</label>
                            <input type="number" name="Phone" class="form-control" value="{{user.Phone}}">

                            <button type="submit" class="btn btn-success mt-4">Submit</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
