<div class="container-xxl position-relative bg-white d-flex p-0 products" ng-app="app" ng-controller="AppCtrl">

    <div class="content p-4">
        <div class="actionpane  text-center">
            <button class="btn btn-default">New Product</button>
        </div>

        <div class="tables">
            <table class="table  table-striped table-bordered table-hover table-checkable order-column dataTable">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Category</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Status</th>
                        <th>Created</th>
                        <th>Delete/Edit</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each products}}
                    <tr>
                        <td>123434</td>
                        <td><span class="name">{{product.product_name}}</span>
                        </td>
                        <td>{{product.product_categorie}}</td>
                        <td>{{product.price}}</td>
                        <td>{{product.available_quantity}}</td>
                        <td><span class="label label-success"> Available </span></td>
                        <td>{{product.date}}</td>
                        <td class="text-center">
                           <a href="/admin/productDel/{{this._id}}" type="button"
                        onclick="alert("Are you sure you want to delete")" class="viewCateg text-danger pe-2"><i class="fas fa-trash-alt"></i></a>
                                <a href="" type="button" class="viewCateg text-success"><i class="fas fa-edit"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                    
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .products {
        .name {
            border-bottom: 1px dotted #ccc;
            cursor: pointer;
        }
    }
</style>