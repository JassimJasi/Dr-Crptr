<section>
    <div class="container-xxl position-relative bg-white d-flex p-0 products" ng-app="app" ng-controller="AppCtrl">


        <div class="content p-4 ">
            <a type="button" class="btn btn-success" href="/admin/addCategory"><i class="fas fa-plus"></i> Add
                Category</a>
            <div class="actionpane  text-center">
                <h2 class="mt-4 fw-bold">Category Management</h2>
            </div>

            {{!-- dataTable --}}
            <div class=" container pt-3">
                <table class="table table-striped table-hover mt-5" id="categoryTable">
                    <thead class="mt-2">
                        <tr>
                            <th class="ps-3" scope="col">Category Name</th>
                            <th class="text-center">Delete</th>
                            <th class="text-center">Edit</th>
                        </tr>
                    </thead>
                    <tbody class="mt-2 mb-3">
                        {{#each category}}
                        <tr>
                            <td class="ps-3">{{this.categoryName}}</td>
                            <td class="text-center ">
                                <a href="/admin/categoryDel/{{this._id}}" type="button"
                                    onclick="delAlert()"
                                    class="viewCateg text-danger"><i class="fas fa-trash-alt"></i></a>
                            </td>
                            <td class="text-center">
                                <a href="/admin/categoryEdit/{{this._id}}" type="button" id="sweetalert"
                                    class="viewCateg text-success"><i class=" fas fa-edit"></i></a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
            {{!-- dataTable end --}}
        </div>
    </div>
</section>


<script>
    $(document).ready(function () {
        $('#categoryTable').DataTable();
    });

