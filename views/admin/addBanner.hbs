<section class="pe-5 ps-5 text-center container-xxl position-relative bg-white d-flex p-0">
    <div class="content p-2 d-flex justify-content-center mt-5">
        <form class="form-horizontal " action="/admin/addBanner" method="post" enctype="multipart/form-data"
            id="addBanner">


            <!-- Form Name -->
            <legend>Add Banner</legend>
            <div class="d-flex p- px-4">

                <div class="border p-4 bg-light">
                    <!-- Text input-->
                    <div class="form-group text-center mt-1">
                        <label class=" control-label" for="product_name ">Banner Headline</label>
                        <div class="addInput">
                            <input id="product_name" name="Headline" placeholder="Banner Headline"
                                class="form-control input-md mt-2" required="" type="text">

                        </div>
                    </div>
                    <div class="form-group text-center mt-1">
                        <label class=" control-label" for="product_name ">Banner Subline</label>
                        <div class="addInput">
                            <input id="product_name" name="Subline" placeholder="Banner Subline"
                                class="form-control input-md mt-2" required="" type="text">

                        </div>
                    </div>
                     {{!-- <div class="form-group text-center mt-1">
                        <label class=" control-label" for="product_name ">Product Categoty</label>
                        <div class="addInput">
                            <input id="product_name" name="Subline" placeholder="Product Details(optional)"
                                class="form-control input-md mt-2" required="" type="text">

                        </div>
                    </div> --}}
                </div>
                <div class="text-center border p-1 ms-1  bg-light">
                    <div class="form-group text-center mt-3">
                        <label class=" control-label" for="product_name">Banner Image</label>
                        <div class=" addInput">
                            <div>

                                <canvas id="canvImg">Banner Image</canvas>
                            </div>
                            <input type="file" id="bannerImg" name="Image" class="input-file ms-5" 
                                onchange="uploadimg()" required>
                        </div>
                    </div>
                </div>
            </div>
            {{#if errMes}}
            <p class="text-danger">{{errMes}}</p>
            {{/if}}
            <!-- Button -->
            <div class="form-group mt-">

                <div class="addInput w-100 px-4 pt-1 ">
                    <button type="submit" class="btn btn-primary w-100 fe-bold">Submit</button>
                </div>
            </div>


        </form>
    </div>
</section>

