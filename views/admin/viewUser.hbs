<div class="container-xxl position-relative bg-white d-flex p-0 products" ng-app="app" ng-controller="AppCtrl">

    <div class="content p-4">
        <div class="actionpane  text-center">
            <h2 class=" fw-bold fw-larger">View User</h2>
        </div>

        <div class="tables">
            <table class="table  table-striped table-bordered table-hover table-checkable order-column dataTable pt-3" id="userTable">
                <thead class="">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Delete/Edit</th {{!-- <th>Status</th> --}}
                    </tr>
                </thead>
                <tbody>

                    {{#each userData}}
                    <tr>
                        <td>{{this._id}}</td>
                        <td><span class="name">{{this.displayName}}</span>
                        </td>
                        <td>{{this.Email}}</td>
                        <td>{{this.Phone}}</td>
                        <td class="text-center">
                            <a href="/admin/userDel/{{this._id}}" type="button" onclick="alert(" Are you sure you
                                want to delete")" class="viewCateg text-danger pe-2"><i
                                    class="fas fa-trash-alt"></i></a>
                            <a href="/admin/userEdit/{{this._id}}" type="button" class="viewCateg text-success"><i class="fas fa-edit"></i></a>
                        </td>
                        {{!-- <td>{{status}}</td> --}}
                        {{!-- <td><span class="label label-success"> Available </span></td> --}}
                        {{!-- <td>{{this.date}}</td> --}}
                    </tr>
                    {{/each}}

                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .products {
        .name {
            border-bottom: 1px dotted #ccc;
            cursor: pointer;
        }
    }
</style>
<script>
    $(document).ready(function () {
        $('#userTable').DataTable();
    });
</script>