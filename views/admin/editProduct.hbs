            },

            product_categorie: {
                required: true,

            },

            available_quantity: {
                required: true,

            },

            price: {
                required: true,
            },
            author: {
                required: true,
            },
            image: {
                required: true,
            },


        },
        messages: {

            image: {
                required: "the Image is required"

            },
        }
    })
    $(document).ready(function () {
        $("#addProduct").validate(function () {
            alert("Submitted");
        });
    });

     function successMess() {
        alert("SuccessFully Add");
    }
</script>